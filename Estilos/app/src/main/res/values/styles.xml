<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/MeuBotao</item>

        <item name="android:textColor">@color/vermelho</item>
    </style>
    <style name="estiloExemplo">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:background">@color/verde</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="MeuBotao" parent="android:Widget.Button">
        <item name="android:textColor">@color/branco</item>
        <item name="android:background">@drawable/selector_botao</item>
    </style>

</resources>
